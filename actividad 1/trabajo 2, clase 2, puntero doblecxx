#include <iostream>

using namespace std;

int main()
{
 int valor = 5;
 int *puntero = &valor;  //mostrando el valor de la direccion original.
 int **doble= &puntero; //mostrando doble puntero, 
  
  cout<<"valor original: "<<valor<<endl;
  cout<<"valor mediante un puntero: "<<valor<<endl;
  cout<<"valor mediante un puntero doble: "<<valor<<endl; //al tener doble asterisco, este nos tiraria el valor de nuestra primra variable, es decir 5.
 
 int *puntero_nuevo = *doble;
 int valor_original = *puntero_nuevo;
 cout<<valor_original<<endl;



//una matriz es un puntero doble. 


//en arreglo le sumo a+1


return 0;
}